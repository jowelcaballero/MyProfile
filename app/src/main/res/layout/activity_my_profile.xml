<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MyProfile">
    <!--SEPARATED-->
    <RelativeLayout android:id="@+id/topLayer" android:layout_width="match_parent" android:layout_height="1110px">
        <TextView
                android:layout_below="@id/imageView4"
                android:id="@+id/textView"
                android:textSize="30sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:text="Jowel A. Caballero"
                android:layout_centerHorizontal="true"/>
        <ImageButton
                android:layout_marginTop="60dp"
                android:layout_width="199dp"
                android:layout_height="191dp"
                app:srcCompat="@drawable/jowel_caballero"
                android:id="@+id/imageView4"
                android:layout_centerHorizontal="true"/>

    </RelativeLayout>
    <!--SEPARATED-->
    <RelativeLayout android:id="@+id/bottomLayer" android:layout_width="match_parent" android:layout_height="1110px" android:layout_below="@+id/topLayer">
        <TextView
                android:layout_below="@id/imagebtnFacebook"
                android:text="Facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:layout_centerHorizontal="true"/>
        <TextView
                android:layout_marginLeft="50dp"
                android:layout_toRightOf="@id/textView7"
                android:layout_below="@id/imagebtnInstagram"
                android:text="Instagram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"/>
        <TextView
                android:layout_marginRight="50dp"
                android:layout_toLeftOf="@id/textView7"
                android:layout_below="@id/imagebtnYoutube"
                android:text="Youtube"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"/>
        <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:srcCompat="@drawable/facebook"
                android:id="@+id/imagebtnFacebook"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"/>
        <ImageButton
                android:layout_marginRight="30dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:srcCompat="@drawable/youtube_logo_illustration_1280x720"
                android:id="@+id/imagebtnYoutube"
                android:layout_toLeftOf="@id/imagebtnFacebook"
                android:layout_marginTop="30dp"/>
        <ImageButton
                android:layout_marginLeft="30dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:srcCompat="@drawable/intagram1"
                android:id="@+id/imagebtnInstagram"
                android:layout_toRightOf="@id/imagebtnFacebook"
                android:layout_marginTop="30dp"/>

    </RelativeLayout>
    <!--SEPARATED-->



</RelativeLayout>