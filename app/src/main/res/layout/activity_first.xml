<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FirstActivity">

    <ImageView
            android:id="@+id/imagebtnFirstActivity"
            android:layout_width="198dp"
            android:layout_height="204dp"
            app:srcCompat="@drawable/jowel_caballero"
            tools:layout_editor_absoluteX="104dp"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.083"/>
    <TextView
            android:id="@+id/textView2"
            android:text="Jowel Caballero"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="104dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            tools:ignore="MissingConstraints" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.421"/>
    <TextView
            android:text="I'm not gonna fight back what I've become Yeah, I've got bruises where I came from But I wouldn't change if I could restart I ain't gonna hide these beautiful scars I've been going way too hard on myself Guess that it's the reason that I'm feeling like hell But I wouldn't change if I could restart I ain't gonna hide these beautiful scars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textDescription"
            tools:layout_editor_absoluteX="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.57"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" tools:ignore="MissingConstraints"/>
    <Button
            android:text="Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnBack"
            tools:layout_editor_absoluteX="161dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.724"
            tools:ignore="MissingConstraints"/>
</androidx.constraintlayout.widget.ConstraintLayout>